<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

             <ss.com.bannerslider.Slider
                 android:id="@+id/banner_slider"
                 android:layout_width="match_parent"
                 android:layout_height="200dp"
                 app:slider_animateIndicators="true"
                 app:slider_indicatorSize="10dp"
                 app:slider_interval="4000"
                 app:slider_loopSlides="true"
                 app:slider_selectedSlideIndicator="@drawable/indicator_round_square_selected"
                 app:slider_unselectedSlideIndicator="@drawable/indicator_round_square_unselected" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Destinos desde:"
                    android:paddingTop="10dp"
                    android:paddingRight="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/country_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@android:style/Widget.Holo.Light.Spinner"/>

            </LinearLayout>

           <TableLayout
               android:id="@+id/main_table"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp">

            <TableRow>
                <android.support.v7.widget.CardView>

                </android.support.v7.widget.CardView>

            </TableRow>

           </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>